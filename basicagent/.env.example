# Bot Configuration
BOT_NAME=Assistant

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/agent_db

# LLM Provider Configuration
# Valid options: "openai" or "grok"
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5-mini

# Grok Configuration (if using Grok)
GROK_API_KEY=
GROK_MODEL=grok-4-fast
GROK_BASE_URL=https://api.x.ai/v1

# Model Configuration (applies to both providers)
MODEL_TEMPERATURE=1
MAX_TOKENS=500

# GreyNoise Configuration (optional)
GREYNOISE_API_KEY=your_greynoise_api_key_here

# Server Configuration
HOST=localhost
PORT=8995
